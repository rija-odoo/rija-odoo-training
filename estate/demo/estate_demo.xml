<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Demo Data For Property Type  -->

    <record id="estate_property_type_residential" model="estate.property.type">
        <field name="name">Residential</field>
    </record>
    <record id="estate_property_type_commercial" model="estate.property.type">
        <field name="name">Commercial</field>
    </record>
    <record id="estate_property_type_industrial" model="estate.property.type">
        <field name="name">Industrial</field>
    </record>
    <record id="estate_property_type_land" model="estate.property.type">
        <field name="name">Land</field>
    </record>

    <!-- Demo Data For Property Detail  -->

    <record id="estate_big_villa" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100</field>
        <field name="garden_orientation">south</field>
    </record>
    <record id="estate_trailer_home" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">canceled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">False</field>
        <field name="garden">True</field>
        <field name="garden_area">100</field>
        <field name="garden_orientation">south</field>
    </record>
    <record id="estate_small_villa" model="estate.property">
        <field name="name">Small Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and small villa</field>
        <field name="postcode">24689</field>
        <field name="date_availability">2022-03-04</field>
        <field name="expected_price">100</field>
        <field name="bedrooms">8</field>
        <field name="living_area">200</field>
        <field name="facades">3</field>
        <field name="garage">False</field>
        <field name="garden">True</field>
        <field name="garden_area">100</field>
        <field name="garden_orientation">south</field>
    </record>
    <record id="estate_house" model="estate.property">
        <field name="name">House</field>
        <field name="state">canceled</field>
        <field name="description">A house is very nice</field>
        <field name="postcode">98763</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">2000</field>
        <field name="bedrooms">2</field>
        <field name="living_area">900</field>
        <field name="facades">4</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100</field>
        <field name="garden_orientation">south</field>
    </record>
    <record id="estate_bungalow" model="estate.property">
        <field name="name">Bungalow</field>
        <field name="state">new</field>
        <field name="description">A big bungalow with a nice garden</field>
        <field name="postcode">84373</field>
        <field name="date_availability">2023-12-12</field>
        <field name="expected_price">1000</field>
        <field name="bedrooms">9</field>
        <field name="living_area">789</field>
        <field name="facades">1</field>
        <field name="garage">True</field>
        <field name="garden">True</field>
        <field name="garden_area">100</field>
        <field name="garden_orientation">south</field>
    </record>


    <!-- Demo Data For Property Offer  -->

    <record id="estate_big_villa_offer1" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"></field>
        <field name="price">1100</field>
        <field name="validity">5</field>
        <field name="property_id" ref="estate_big_villa"></field>
    </record>
    <record id="estate_big_villa_offer2" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_2"></field>
        <field name="price">2200</field>
        <field name="validity">6</field>
        <field name="property_id" ref="estate_big_villa"></field>
    </record>
    <record id="estate_big_villa_offer3" model="estate.property.offer">
        <field name="partner_id" ref="base.res_partner_12"></field>
        <field name="price">3000</field>
        <field name="validity">3</field>
        <field name="property_id" ref="estate_big_villa"></field>
    </record>


    <!-- Demo Data For Property offer accepted or refused  -->

    <function model="estate.property.offer" name="action_accepted">
        <value eval="[ref('estate_big_villa_offer2')]" />
    </function>

    <!-- Demo Data For Property Tag  -->

    <record id="estate_property_tag_cozy" model="estate.property.tag">
        <field name="name">cozy</field>
        <field name="color">1</field>
    </record>

    <!-- Demo Data For Property Details and also add some amount in specifice property-->
    
    <record id="estate_big_house" model="estate.property">
        <field name="name">Big House</field>
        <field name="state">new</field>
        <field name="description">A house is very big</field>
        <field name="postcode">987444</field>
        <field name="date_availability">2023-02-02</field>
        <field name="expected_price">1200</field>
        <field name="bedrooms">2</field>
        <field name="living_area">100</field>
        <field name="offer_ids"
            eval="[
        Command.create({
            'partner_id' : ref('base.res_partner_12'),
            'price': 100,
            'validity' : 7,
        })]" />
    </record>

</odoo>