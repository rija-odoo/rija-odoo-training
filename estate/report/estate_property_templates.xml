<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- For Templates View -->

    <template id="estate_property_offers">
        <t t-foreach="docs" t-as="record">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div>
                        <h1>
                            <strong>Property Name : </strong>
                            <span t-field="record.name" />
                        </h1>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="record.expected_price" />
                            <br></br>
                            <strong>Status : </strong>
                            <span t-field="record.state" />
                        </div>
                        <div id="test">
                            <t t-call="estate.estate_report_property_table_template" />
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <!-- For Table Template View -->

    <template id="estate_report_property_table_template">
        <t t-if="record.offer_ids">
            <table class="table">
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Partner</th>
                        <th>Validity</th>
                        <th>Deadline</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="offers" t-value="record.offer_ids" />
                    <tr t-foreach="offers" t-as="offer">
                        <td>
                            <span t-field="offer.price" />
                        </td>
                        <td>
                            <span t-field="offer.partner_id" />
                        </td>
                        <td>
                            <span t-field="offer.validity" />
                        </td>
                        <td>
                            <span t-field="offer.date_deadline" />
                        </td>
                        <td>
                            <span t-field="offer.status" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </t>
        <t t-else="">
            <strong>No offers have been made yet :</strong>
        </t>
    </template>

    <!-- For Sub-template View -->

    <template id="estate_subtemplate_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="property.name" />
                        </h1>
                        <t t-set="records" t-value="property.property_ids" />
                        <t t-foreach="records" t-as="record">
                            <h2>
                                <span t-field="record.name" />
                            </h2>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="record.expected_price" />
                                <strong>Status : </strong>
                                <span t-field="record.state" />
                            </div>
                            <t t-call="estate.estate_report_property_table_template"></t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>