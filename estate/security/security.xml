<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        <field name="implied_ids" eval="[(4,ref('estate_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>

    <record id="rule_user_id" model="ir.rule">
        <field name="name">A description of the Agent rule's role</field>
        <field name="model_id" ref="model_estate_property" />
        <field name="perm_read" eval="True" />
        <field name="groups" eval="[(4,ref('estate.estate_group_user'))]" />
        <field name="domain_force">['|', ('seller_id', '=', user.id),('seller_id', '=', False)]
        </field>
    </record>

    <record id="rule_manager_id" model="ir.rule">
        <field name="name">A description of Manager the rule's role</field>
        <field name="model_id" ref="model_estate_property"></field>
        <field name="perm_read" eval="True"></field>
        <field name="perm_create" eval="True"></field>
        <field name="perm_unlink" eval="True"></field>
        <field name="groups" eval="[(4,ref('estate.estate_group_manager'))]" />
    </record>

</odoo>
        
        